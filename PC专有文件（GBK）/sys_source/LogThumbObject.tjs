	/*-----------------------------------------
	■ 参照LOG位置を涓する
	-----------------------------------------*/
	function ChageLogIndex( val )
	{
		//true なら加算 false ならp算
		if(val == 1){
			if((f["jumpdata"].count-1) < (NowIndex+1))return false;
			
			++NowIndex;
		}else if(val == -1){
			//先^にす
			if((NowIndex-1) < 0)return false;
			
			--NowIndex;
			
		}else if(val == 2){
		//先^にす
			if(NowIndex == DataIndex)return false;
			SetLogUseIndex();
			
		}else if(val == -2){
		//最後にす
			if(NowIndex == 0)return false;
			NowIndex = 0;
			
		}
		
		return true;
	}
	
	
	
	
	
