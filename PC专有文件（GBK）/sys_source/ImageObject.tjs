	/*-----------------------------------------
	◆ファイナライズ
	
	引数：
	
	なし
	
	-----------------------------------------*/
	function finalize()
	{
		super.finalize();
		
		
		var cnt = ZoomObj.count;
		
		for(var i=0; i<cnt; i++){
			
			if(ZoomObj[i] !== void)invalidate ZoomObj[i];
			
			ZoomObj[i] = void;
		}
		
		cnt     = DrawWaitObj.count;
		
		for(var i=0; i<cnt; i++){
			
			if(DrawWaitObj[i] !== void)invalidate DrawWaitObj[i];
			
			DrawWaitObj[i] = void;
		}
		
	}
	
	
	
	
	
	
